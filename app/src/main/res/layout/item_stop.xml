<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    tools:theme="@style/Theme.TrainTracker">

    <View
        android:id="@+id/timelineVerticalLine"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/timelineDot"
        app:layout_constraintStart_toStartOf="@+id/timelineDot"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/timelineDot"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:background="@drawable/timeline_dot"
        app:layout_constraintBottom_toBottomOf="@+id/stopStationName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/stopStationName" />

    <TextView
        android:id="@+id/stopStationName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/stopTimeSch"
        app:layout_constraintStart_toEndOf="@+id/timelineDot"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="London Euston" />

    <TextView
        android:id="@+id/stopTimeSch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/stopStationName"
        tools:text="Sch: 14:00" />

    <TextView
        android:id="@+id/stopTimeEst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?android:attr/textColorSecondary"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stopTimeSch"
        tools:text="Est: 14:02" />

</androidx.constraintlayout.widget.ConstraintLayout>